{% extends 'layout.jinja2' %}
{% block title %}{% endblock title %}
{% block content %}
<form method="GET" action={{"fetcher"|route_url()}}>
  <div class="form-group">
    <label for="sources">Sources</label>
    <select id="sources" name="sources" multiple>
      <option value="olx" selected>OLX</option>
      <option value="gumtree" selected>Gumtree</option>
      <option value="otodom">Otodom</option>
      <option value="gratka">Gratka</option>
    </select>
  </div>
  <div class="form-group">
    <label for="offer_type">Offer type</label>
    <input type="text" class="form-control" id="offer_type" name="offer_type" placeholder="Another input" value="rent">
  </div>
  <div class="form-group">
    <label for="estate_type">Estate type</label>
    <input type="text" class="form-control" id="estate_type" name="estate_type" placeholder="Another input" value="domy">
  </div>
  <div class="form-group">
    <label for="city">City</label>
    <input type="text" class="form-control" id="city" name="city" placeholder="Another input" value="poznan">
  </div>
  <div class="form-group">
    <label for="voivodeship">Voivodeship</label>
    <input type="text" class="form-control" id="voivodeship" name="voivodeship" placeholder="Another input" value="wielkopolskie">
  </div>
  <div class="form-group">
    <label for="sim_thre">Similarity threshold</label>
    <input type="text" class="form-control" id="similarity_threshold" name="similarity_threshold" placeholder="Another input">
  </div>
  <div class="form-group">
    <label for="room_diff">Room difference</label>
    <input type="text" class="form-control" id="room_difference" name="room_difference" placeholder="Another input">
  </div>
  <div class="form-group">
    <label for="size_dfiff">Size difference</label>
    <input type="text" class="form-control" id="size_difference" name="size_difference" placeholder="Another input">
  </div>
  <div class="form-group">
    <label for="price_diff">Price difference</label>
    <input type="text" class="form-control" id="price_difference" name="price_difference" placeholder="Another input">
  </div>
  <button type="submit" class="btn btn-primary" name="form.submitted">Submit</button>
</form>
{% endblock content %}
